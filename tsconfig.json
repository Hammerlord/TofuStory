{
    "compilerOptions": {
        "outDir": "./dist/",
        "module": "es6",
        "target": "es5",
        "jsx": "react-jsx",
        "allowJs": true,
        "lib": ["es2015", "es2017", "dom"],
        "types": ["node"],
        "allowSyntheticDefaultImports": true,
        "moduleResolution": "Node"
    },
    "include": ["src", ".d.ts"],
    "exclude": ["node_modules", "**/*.spec.ts", "**/*.test.ts"]
}
